<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<div class="container" id="movies">
<div class="row row-cols-1 row-cols-md-2 g-4">
  <% @movies.each do |movie| %>
    <div class="col">
        <div class="card border-secondary mb-3 rounded shadow-lg" style="max-width: 25rem; max-height: 20rem">
          <div class="custom-image-container d-flex align-items-center justify-content-center">
            <img class="card-img-top" src="<%= "https://image.tmdb.org/t/p/w400/#{movie.poster_url}" %>" alt="Card image cap">
          </div>
            <div class="card-body">
              <%= link_to movie_path(movie) do %>
                <h5 class="card-title"><%= "#{movie.title}"%></h5>
              <%end%>
              <h6 class="card-subtitle mb-2 text-muted">Rating: <%= "#{movie.rating}" %></h6>
              <div class="text-clamp">
                <p class="card-text"><%= "#{movie.overview}" %></p>
              </div>
            </div>
        </div>
    </div>
  <%end%>
</div>
</div>

<%= link_to "New movie", new_movie_path %>
