<p style="color: green"><%= notice %></p>

<div class= "container">
  <div class="row d-flex align-items-center justify-content-between mb-3 pr-4 mr-4">
  <div class="col-auto">
  <h1 class="mb-0"><%= @list.name %></h1>
  </div>
  <div class="col-auto">
  <%= link_to new_list_bookmark_path(@list) do %>
    <button type="button" class="btn btn-success">
      Add a movie <i class="fa-solid fa-plus"></i>
    </button>
  <% end %>
</div>
</div>
<div class="row row-cols-1 row-cols-md-2 g-4">
<% @list.bookmarks.each do |bookmark| %>
  <div class="col">
        <div class="card border-secondary mb-3 rounded shadow-lg" style="max-width: 25rem; max-height: 20rem">
          <div class="custom-image-container d-flex align-items-center justify-content-center">
            <img class="card-img-top" src="<%= "https://image.tmdb.org/t/p/w400/#{bookmark.movie.poster_url}" %>" alt="Card image cap">
          </div>
            <div class="card-body">
                <h5 class="card-title"><%= "#{bookmark.movie.title}"%></h5>
              <h6 class="card-subtitle mb-2 text-muted">Rating: <%= "#{bookmark.movie.rating}" %></h6>
              <div class="text-clamp">
                <p class="card-text"><%= "#{bookmark.movie.overview}" %></p>
              </div>
            </div>
            <div class="card-footer">
            <small class="text-body-secondary"><%="#{bookmark.comment}"%></small>
            </div>
        </div>
    </div>
<%end%>
</div>

</div>


<div>
  <%= link_to "Edit this list", edit_list_path(@list) %> |
  <%= link_to "Back to lists", lists_path %> |
  <%= button_to "Destroy this list", @list, method: :delete %>
</div>
